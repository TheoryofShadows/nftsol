# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/nftsol

# Application Settings
NODE_ENV=development
PORT=5000

# Session Configuration
SESSION_SECRET=your-session-secret-key-here

# Solana Configuration (Optional - for future wallet integration)
# SOLANA_NETWORK=devnet
# SOLANA_RPC_URL=https://api.devnet.solana.com

# External Services (Optional)
# PINATA_API_KEY=your-pinata-api-key
# PINATA_SECRET_API_KEY=your-pinata-secret-key

# NFT Data Providers (Required for live data)
QUICKNODE_API_KEY=your-quicknode-api-key
QUICKNODE_ENDPOINT=https://your-endpoint.solana-mainnet.quiknode.pro/your-api-key
SIMPLEHASH_API_KEY=your-simplehash-api-key
MORALIS_API_KEY=your-moralis-api-key
HELIUS_API_KEY=your-helius-api-key
MAGIC_EDEN_API_KEY=your-magic-eden-api-key
SOLSCAN_API_KEY=your-solscan-api-key
ALCHEMY_API_KEY=your-alchemy-api-key
# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
ADMIN_ALLOWED_IPS=127.0.0.1,::1
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your-session-secret-here

# File Upload Security
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Database Security
DB_CONNECTION_LIMIT=10
DB_IDLE_TIMEOUT=30000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,https://your-domain.com

# Monitoring
SECURITY_ALERTS_EMAIL=admin@your-domain.com
ENABLE_SECURITY_LOGGING=true
