{
  "name": "nftsol",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm:api:dev\" \"npm:web:dev\"",
    "api:dev": "cd backend-advanced && node server/index.js",
    "web:dev": "cd frontend && vite",
    "build": "vite build && esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start": "cross-env NODE_ENV=production node dist/index.js"
  },
  "dependencies": {
    "@solana/web3.js": "^1.95.3",
    "dotenv": "^16.4.5",
    "node-fetch": "^3.3.2",
    "vite": "^5.4.8"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "esbuild": "^0.24.0"
  }
}
