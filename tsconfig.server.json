{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": { "@shared/*": ["shared/*"] },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "noEmitOnError": false
  },
  "include": ["server/**/*.ts", "shared/**/*.ts"],
  "exclude": ["server/vite.ts", "vite.config.ts", "dist/**/*", "node_modules/**/*"]
}
